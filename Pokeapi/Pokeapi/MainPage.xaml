<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pokeapi.MainPage"
             xmlns:vmodel="clr-namespace:Pokeapi.VM"
             BackgroundColor="#F5F5F5">

    <ContentPage.BindingContext>
        <vmodel:VMInicio/>
    </ContentPage.BindingContext>

    <StackLayout Padding="20" Spacing="20">

        <Label Text="Selecciona el Pokémon"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#333333"/>

        <Picker SelectedItem="{Binding NumeroPoke}"
                HeightRequest="50"
                WidthRequest="200"
                Margin="0,10"
                BackgroundColor="#FFFFFF"
                TextColor="#333333"
                Title="Selecciona un número">
            <Picker.Items>
                <x:String>10</x:String>
                <x:String>20</x:String>
                <x:String>30</x:String>
                <x:String>40</x:String>
            </Picker.Items>
        </Picker>

        <Label Text="Pokemones disponibles"
               FontSize="20"
               FontAttributes="Italic"
               HorizontalOptions="Center"
               TextColor="#333333"/>

        <ListView ItemsSource="{Binding ListaPokemon}"
          HasUnevenRows="True"
          SeparatorColor="#B0B0B0"
          Margin="0,10"
          HorizontalScrollBarVisibility="Never"
          VerticalScrollBarVisibility="Never"
          MaximumWidthRequest="400"
          HorizontalOptions="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                            <Label Text="{Binding Name}"
                           TextColor="#333333"
                           FontSize="18"
                           HorizontalOptions="Center"
                           VerticalOptions="CenterAndExpand"
                           LineBreakMode="WordWrap"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Margin="0,20">
            <Button Command="{Binding BtnAnteriorCommand}" 
                    Text="Anterior"
                    BackgroundColor="#0078D4"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="10,5"
                    WidthRequest="120"/>
            <Button Command="{Binding BtnSiguienteCommand}" 
                    Text="Siguiente"
                    BackgroundColor="#0078D4"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="10,5"
                    WidthRequest="120"/>
        </HorizontalStackLayout>

    </StackLayout>
</ContentPage>
